<div class="ui large search selection dropdown olive button" style="margin-top: 65px">
    <div class="text">Go To Trail</div>
    <i class="dropdown icon"></i>
    <div class="menu">
        {{#each walkways}}
            <div class="item">
                <span class="description">{{county}}</span>
                <a href="#{{_id}}"> {{trailname}}</a>
            </div>
        {{/each}}
    </div>
</div>


{{#each walkways as | walkway | }}

<div class="ui fluid horizontal olive card" style="margin-left: -5px">
    <div class="image" style="height: 200px; width: 200px">
        <img class="ui centered image" src="{{profileImage}}">
    </div>
    <div class="content">
            <div class="header"><h1 id="{{_id}}">{{ trailname }}</h1></div>
            <div class="meta">
                <h2 style="color: olive">Trail Type : {{trailtype}}</h2>
                <h2 style="color: #cb3232"><a href="/viewProfile/{{creator}}">{{creatorName}}</a></h2>
            </div>
            <div class="extra">
                Current Rating:
                <div class="ui red disabled rating" data-rating="3.5" data-max-rating="5"></div>
                <p></p>

            </div>
            <div class="description">
                <div class="ui grid" style="margin-top: 10px">
                    <div class="eight wide column">
                <table class="ui large collapsing inverted olive table">
                    <thead>
                    <tr >
                        <th class="four wide">Details</th>
                        <th class="twelve wide"></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="olive">Grade</td>
                        <td>{{walkway.grade}}</td>
                    </tr>
                    <tr>
                        <td class="olive">Trail Type</td>
                        <td>{{trailtype}}</td>
                    </tr>
                    <tr>
                        <td class="olive">County</td>
                        <td>{{county}}</td>
                    </tr>
                    <tr>
                        <td class="olive">Trail Length (Km)</td>
                        <td>{{traillength}}</td>
                    </tr>
                    <tr>
                        <td class="olive">Walking Time</td>
                        <td>{{time}}</td>
                    </tr>
                    <tr>
                        <td class="olive">Nearest Town</td>
                        <td>{{nearesttown}}</td>
                    </tr>
                    <tr>
                        <td class="olive">Start Coordinates (lat, long) : </td>
                        <td>{{startcoordinates.latitude}}, {{startcoordinates.longitude}}</td>
                    </tr>
                    </tbody>
                </table>
                    </div>
                    <div class="eight wide column">
                        <h1>Description</h1>
                        <p>{{description}}</p>
                    </div>
                </div>
        </div>
    </div>
    <div class="extra content">
        <div class="ui styled fluid accordion">
            <div class="title" style="color: olive;font-size: large">
                <i class="dropdown icon"></i>{{comments.length}} comments
            </div>
            <div class="content">
                {{> comments}}
            </div>
        </div>
    </div>
</div>
{{/each}}

<script>
    $('.ui.dropdown')
            .dropdown()
    ;
</script>
