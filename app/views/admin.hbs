{{> adminmenu _id="home" }}

<section class="ui raised segment">

    <div> YOU ARE AN ADMINISTRATOR OF WALKWAYS. WELL DONE!!!! </div>

    <section class="ui raised segment">
        <div class="ui two column grid basic middle aligned segment">
            <div class="ten wide column">
                <form class="ui stacked segment form" action="/addtrail" method="POST">
                    <h3 class="ui header">Add New Walkway</h3>
                    <div class="two fields">
                        <div class="required field">
                            <label>County</label>
                            <div class="ui fluid search selection dropdown">
                                <input type="hidden" name="county">
                                <i class="dropdown icon"></i>
                                <div class="default text">Select County</div>
                                <div class="menu">
                                    <div class="item" data-value="ant">Antrim</div>
                                    <div class="item" data-value="arm">Armagh</div>
                                    <div class="item" data-value="car">Carlow</div>
                                    <div class="item" data-value="cav">Cavan</div>
                                    <div class="item" data-value="clr">Clare</div>
                                    <div class="item" data-value="crk">Cork</div>
                                    <div class="item" data-value="der">Derry</div>
                                    <div class="item" data-value="dgl">Donegal</div>
                                    <div class="item" data-value="dwn">Down</div>
                                    <div class="item" data-value="dub">Dublin</div>
                                    <div class="item" data-value="frm">Fermanagh</div>
                                    <div class="item" data-value="gwy">Galway</div>
                                    <div class="item" data-value="kry">Kerry</div>
                                    <div class="item" data-value="kdr">Kildare</div>
                                    <div class="item" data-value="kky">Kilkenny</div>
                                    <div class="item" data-value="lao">Laois</div>
                                    <div class="item" data-value="ltr">Leitrim</div>
                                    <div class="item" data-value="lmk">Limerick</div>
                                    <div class="item" data-value="lgf">Longford</div>
                                    <div class="item" data-value="lth">Louth</div>
                                    <div class="item" data-value="may">Mayo</div>
                                    <div class="item" data-value="mea">Meath</div>
                                    <div class="item" data-value="mon">Monaghan</div>
                                    <div class="item" data-value="off">Offaly</div>
                                    <div class="item" data-value="rsc">Roscommon</div>
                                    <div class="item" data-value="sgo">Sligo</div>
                                    <div class="item" data-value="tip">Tipperary</div>
                                    <div class="item" data-value="tyr">Tyrone</div>
                                    <div class="item" data-value="wfd">Waterford</div>
                                    <div class="item" data-value="wmh">Westmeath</div>
                                    <div class="item" data-value="wxd">Wexford</div>
                                    <div class="item" data-value="wkl">Wicklow</div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="required field">
                        <label>Trail Name</label>
                        <input placeholder="Trail Name" type="text" name="trailname">
                    </div>

                    <div class="two fields">
                        <div class="required field">
                            <label>Trail Type</label>
                            <div class="ui fluid search selection dropdown">
                                <input type="hidden" name="trailtype">
                                <i class="dropdown icon"></i>
                                <div class="default text">Select Trail Type</div>
                                <div class="menu">
                                    <div class="item" data-value="lin">Linear</div>
                                    <div class="item" data-value="lop">Loop</div>
                                    <div class="item" data-value="oab">Out and Back</div>
                                </div>
                        </div>

                    </div>
                        <div class="required field">
                            <label>Trail Length</label>
                            <div class="ui right labeled input">
                                <input placeholder="000" type="number" step="0.1" min="0.5" max="600" name="traillength">
                                <div class="ui basic label">
                                    Km
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="one field">
                        <div class="ui form">
                            <div class="required field">
                                <label>Grade</label>
                                <select multiple="" class="ui dropdown" name="grade">
                                    <option value="">Select Grade</option>
                                    <option value="esy">Easy</option>
                                    <option value="mod">Moderate</option>
                                    <option value="str">Strenuous</option>
                                    <option value="dif">Very Difficult</option>
                                    <option value="wba">Wheelchair and Buggy Accessible</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="two fields">
                        <div class="field">
                            <label>Approximate Walking Time</label>
                            <div class="ui right labeled input">
                                <input placeholder="000" type="time" step="300" name="time">
                                <div class="ui basic label">
                                    Hrs
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <label>Nearest Town</label>
                            <input placeholder="Nearest Town" type="text" name="nearesttown">
                        </div>


                    </div>

                    <div class="required field">
                        <label>Description</label>
                        <textarea placeholder="Trail Description..." type="text" name="description"></textarea>
                    </div>

                    <div class="one field">
                        <label>Start Co-Oridnates</label>
                        <div class="two fields">
                            <div class="required field">
                                <label>Latitude</label>
                                <div class="ui right labeled input">
                                    <input placeholder="00.0" type="number" step="0.000001" min="51.0" max="56.0" name="startlat">
                                    <div class="ui basic label">
                                        <sup>o</sup>
                                    </div>
                                </div>
                            </div>
                            <div class="required field">
                                <label>Longitude</label>
                                <div class="ui right labeled input">
                                    <input placeholder="00.00" type="number" step="0.000001" min="-10.0" max="-5.0" name="startlong">
                                    <div class="ui basic label">
                                        <sup>o</sup>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="one field">
                            <label>End Co-Oridnates</label>
                            <div class="two fields">
                                <div class="required field">
                                    <label>Latitude</label>
                                    <div class="ui right labeled input">
                                        <input placeholder="startlat" type="number" step="0.000001" min="51.0" max="56.0" name="endlat">
                                        <div class="ui basic label">
                                            <sup>o</sup>
                                        </div>
                                    </div>
                                </div>
                                <div class="required field">
                                    <label>Longitude</label>
                                    <div class="ui right labeled input">
                                        <input placeholder="startlong" type="number" step="0.000001" min="-10.0" max="-5.0" name="endlong">
                                        <div class="ui basic label">
                                            <sup>o</sup>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                    </div>

                    <button class="ui blue submit button">Submit</button>
                    <i class="red asterisk icon"></i>Denotes required field
                </form>
            </div>
            <div class="six wide column">
                <img class="ui image" src="images/trail.png">
            </div>
        </div>
    </section>




</section>

<script>
    $('.ui.dropdown')
            .dropdown()
    ;
</script>

